<section class="form-div">
   
    <form class="edit-post-form">
         <h2>
        Edit Post
    </h2>
        
            <input name="post-title" type="text" value="{{post.title}}" />

            <div class="card-body">
                <p class="card-text">({{post.post_body}})</p>
                </div>
       <div class="card-footer">
           <small>{{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}  <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a></small>
       </div>
               
      
        <button type="submit">Save post</button>
        <button type="button" class="delete-post-btn">Delete post</button>
    </form>
</section>
{{> comments post.comments}}
<section class ="form-div">
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
    </div>
</form>
</section>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>