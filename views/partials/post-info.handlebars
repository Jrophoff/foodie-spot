<article class="post">
    <div class="title">
        <h1>{{title}}</h1>
    </div>
    <div>
        <p>
            {{post_body}}
        </p>
    </div>
    <div class="meta">
        Author: {{user.username}} on {{format_date created_at}} {{vote_count}} {{format_plural "Upvote" vote_count}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>